<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardBackgroundColor="#222222"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/locationHeader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#2D2D2D"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="HVIDE SANDE - 31.01"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandableContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/locationHeader">

            <TextView
                android:id="@+id/lblPrice"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textColor="#888888"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="#333333"
                android:gravity="center"
                android:text="A Hug &amp; 2 Jokes"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/lblPrice"
                app:layout_constraintTop_toTopOf="@id/lblPrice" />

            <TextView
                android:id="@+id/lblBeds"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="#Beds:"
                android:textColor="#888888"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblPrice" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_beds"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:background="#333333"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="@id/lblBeds"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/lblBeds"
                app:layout_constraintTop_toTopOf="@id/lblBeds" />

            <TextView
                android:id="@+id/lblDate"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Stay Date:"
                android:textColor="#888888"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblBeds" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="Feb.  Mo Tu We Th Fr Sa Su \n 6      2  3  4  5  6  7  8"
                android:textColor="#FFA726"
                android:typeface="monospace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/lblDate"
                app:layout_constraintTop_toTopOf="@id/lblDate" />


            <TextView
                android:id="@+id/lblSauna"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="Sauna:"
                android:textColor="#888888"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblDate" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerSauna"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/toggle_container_background"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/lblSauna"
                app:layout_constraintTop_toTopOf="@id/lblSauna">

                <TextView
                    android:id="@+id/toggleSauna"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/toggle_yes_background"
                    android:gravity="center"
                    android:text="YES"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/lblKamin"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Kamin:"
                android:textColor="#888888"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblSauna" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerKamin"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/toggle_container_background"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/lblKamin"
                app:layout_constraintTop_toTopOf="@id/lblKamin">

                <TextView
                    android:id="@+id/toggleKamin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/toggle_no_background"
                    android:gravity="center"
                    android:text="NO"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/lblSmoker"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Smoker:"
                android:textColor="#888888"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblKamin" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerSmoker"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/toggle_container_background"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/lblSmoker"
                app:layout_constraintTop_toTopOf="@id/lblSmoker">

                <TextView
                    android:id="@+id/toggleSmoker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/toggle_no_background"
                    android:gravity="center"
                    android:text="NO"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/lblAnimals"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Animals:"
                android:textColor="#888888"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblSmoker" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerAnimals"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/toggle_container_background"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/lblAnimals"
                app:layout_constraintTop_toTopOf="@id/lblAnimals">

                <TextView
                    android:id="@+id/toggleAnimals"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/toggle_no_background"
                    android:gravity="center"
                    android:text="NO"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/lblWifi"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="16dp"
                android:text="WiFi:"
                android:textColor="#888888"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblAnimals" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerWifi"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/toggle_container_background"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/lblWifi"
                app:layout_constraintTop_toTopOf="@id/lblWifi">

                <TextView
                    android:id="@+id/toggleWifi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/toggle_yes_background"
                    android:gravity="center"
                    android:text="YES"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
